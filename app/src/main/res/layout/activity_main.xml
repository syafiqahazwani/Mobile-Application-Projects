<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="160dp"
        android:layout_height="150dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.32999998"
        app:srcCompat="@drawable/circle_top_1" />

    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        app:layout_constraintBottom_toBottomOf="@id/imageView"
        app:layout_constraintEnd_toEndOf="@id/imageView"
        app:layout_constraintStart_toStartOf="@id/imageView"
        app:layout_constraintTop_toTopOf="@id/imageView"
        app:strokeWidth="1dp"
        app:srcCompat="@drawable/profile1" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Anime Quiz"
        android:textColor="@color/orange"
        android:textSize="50sp"
        android:textStyle="bold"
        android:layout_marginTop="29dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/startBtn"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:background="@drawable/orange_background"
        android:text="Play Now"
        android:layout_marginTop="16sp"
        style="@android:style/Widget.Button"
        app:layout_constraintEnd_toEndOf="@id/textView"
        app:layout_constraintStart_toStartOf="@id/textView"
        app:layout_constraintTop_toBottomOf="@id/textView"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/leaderBtn"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:textColor="@color/orange"
        android:textSize="20sp"
        android:textStyle="bold"
        android:background="@drawable/white_background"
        android:text="Level View"
        android:layout_marginTop="16sp"
        style="@android:style/Widget.Button"
        app:layout_constraintEnd_toEndOf="@id/startBtn"
        app:layout_constraintStart_toStartOf="@id/startBtn"
        app:layout_constraintTop_toBottomOf="@id/startBtn"/>

</androidx.constraintlayout.widget.ConstraintLayout>